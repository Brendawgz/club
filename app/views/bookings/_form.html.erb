<div class="row">
  <div class="col-xs-12">
    <%= form_for(@booking, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <% @booking.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
    
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :name %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :name, class:"form-control", placeholder: "Enter name", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :guests %>
      </div>
      <div class="col-sm-8">
        <%= f.select(:guests, (1..50), {}, { :class => 'form-options' }) %>
      </div>
    </div>
    
    <% if @booking.new_record? %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :events %>
      </div>
      <div class="col-sm-8">
        <%= f.collection_select :event_ids, @events, :id, :name, {}, { :class => 'form-options' } %>
      </div>
    </div>
    <% end %>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit(@booking.new_record? ?  "Make Booking" : "Save Changes", class: "btn btn-primary btn-large submit-buttons") %>
        </div>
      </div>
    <% end %>
    
    <div class="col-sm-offset-2 col-sm-10 ">
      <%= link_to "Back", request.referer.present? ? request.referer : root_path, class:"btn btn-primary btn-large cancel-button-form" %>
    </div>
  </div>
</div>