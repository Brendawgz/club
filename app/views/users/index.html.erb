<div class="jumbotron">
    <div class="container">
        <div class="row">
            <div class="col-md-12 page-title">
                <h1 class="page-title-text">Users</h1>
            </div>
        </div>
        <% @users.each do |user| %>
        <div class="row">
            <div class="col-md-12 page-text">
                <h2><%= user.username %></h2>
                <p>
                    Email: <%= user.email %> <br>
                    Number of Bookings: <%= user.bookings.count %> Bookings
                </p>
                    <div class="event-actions">
                        <%= button_to "Delete User", user_path(user), method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-danger btn-large edit-button event-button" %>
                        <%= button_to "Edit User", edit_user_path(user), method: :get, class:"btn btn-primary btn-large edit-button event-button" %>
                    </div>
            </div>
        </div>
        <% end %>
    </div>
</div>