<div class="jumbotron">
    <div class="container">
        <div class="row">
            <div class="col-md-12 page-title">
                <h1 class="page-title-text"><%= @user.username %>'s Profile</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 page-text">
                <h2>Profile Details</h2>
                <p>
                    Username: <%= @user.username %> <br>
                    Email: <%= @user.email %> <br>
                    Number of Bookings: <%= @user.bookings.count %> Bookings
                    <div class="event-actions">
                        <%= button_to "View Your Bookings", list_bookings_path, method: :get, class:"btn btn-primary btn-large edit-button event-button" %>
                    </div>
                </p>
            </div>
        </div>
    </div>
</div>