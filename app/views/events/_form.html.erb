<div class="row">
  <div class="col-xs-12">
    <%= form_for(@event, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :name %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :name, class:"form-control", placeholder: "Enter name", autofocus: true %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :date %>
      </div>
      <div class="col-sm-3">
        <%= f.datetime_local_field :date, class:"form-control" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :capacity %>
      </div>
      <div class="col-sm-8">
        <%= f.select(:capacity, (0..50), {}, { :class => 'form-options' }) %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :theme %>
      </div>
      <div class="col-sm-8">
        <%= f.select(:theme, ['Futuristic', 'Wild Wild West', 'Arabian Nights', 'Alice in Wonderland', 'None'], {}, { :class => 'form-options' }) %>
      </div>
    </div>
    
    <% if !@event.new_record? %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :past %>
      </div>
      <div class="col-sm-8">
        <%= f.check_box :past, class: 'form-options' %>
      </div>
    </div>
    <% end %>
    
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit(@event.new_record? ?  "Create Event" : "Save Changes", class: "btn btn-primary btn-large buttons") %>
        </div>
      </div>
    <% end %>
    
    <div class="col-sm-offset-2 col-sm-10 ">
      <%= link_to "Cancel", request.referer.present? ? request.referer : default_path, class:"btn btn-primary btn-large cancel-button" %>
    </div>
  </div>
</div>